{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "dependencies": {
    "lerna": "^8.1.2",
    "typescript": "^5.3.3"
  },
  "scripts": {
    "start:dev": "lerna run start:dev",
    "start:bot": "lerna run start:bot",
    "db:prod": "cd packages/manager-database && npm run db:create",
    "start:prod": "lerna run build && cd packages/manager-api && npm run start:prod",
    "bot:prod": "lerna run build && cd packages/manager-bot && npm run bot:prod",
    "db:create": "lerna run db:create",
    "clean": "lerna run clean"
  }
}
